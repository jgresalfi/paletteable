{
  "manifest_version": 2,
  "name": "PaletteAble",
  "description": "This extension grabs color palettes from active webpages.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "PaletteAble",
    "default_popup": "popup.html"
  },
  
  "permissions": ["activeTab", "notifications"]
}
