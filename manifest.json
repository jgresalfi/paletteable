{
  "manifest_version": 2,
  "name": "PaletteAble",
  "description": "This extension grabs color palettes from active webpages.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["download.js", "content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "Get me some colors!",
    "default_popup": "popup.html"
  },
  
  "permissions": ["activeTab"]
}
